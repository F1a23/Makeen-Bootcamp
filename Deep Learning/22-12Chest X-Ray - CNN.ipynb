import tensorflow as tf

IMG_SIZE = (224, 224) #Resize all images to 224×224
BATCH_SIZE = 32
SEED = 42

train_ds = tf.keras.utils.image_dataset_from_directory(
    train_dir,
    image_size=IMG_SIZE,
    batch_size=BATCH_SIZE,
    seed=SEED,
    label_mode="binary"
)

val_ds = tf.keras.utils.image_dataset_from_directory(
    val_dir,
    image_size=IMG_SIZE,
    batch_size=BATCH_SIZE,
    seed=SEED,
    label_mode="binary"
)

test_ds = tf.keras.utils.image_dataset_from_directory(
    test_dir,
    image_size=IMG_SIZE,
    batch_size=BATCH_SIZE,
    shuffle=False,
    label_mode="binary"
)

# =========================
# Normalize (0..1)
# =========================
normalizer = tf.keras.layers.Rescaling(1./255)

train_ds = train_ds.map(lambda x, y: (normalizer(x), y))
val_ds   = val_ds.map(lambda x, y: (normalizer(x), y))
test_ds  = test_ds.map(lambda x, y: (normalizer(x), y))

# =========================
# Data Augmentation (Train only)
# =========================
data_augmentation = tf.keras.Sequential([
    tf.keras.layers.RandomFlip("horizontal"), #Horizontal Flip: استخدمناه لأن اتجاه الصورة (يمين/يسار) لا يغيّر وجود الالتهاب الرئوي
    tf.keras.layers.RandomRotation(0.05), #Rotation: استخدمناه لأن صور الأشعة قد تُلتقط بزوايا مختلفة
    tf.keras.layers.RandomZoom(0.10), #استخدمناه لأن حجم الرئة قد يظهر أكبر أو أصغر حسب المسافة
], name="data_augmentation")

train_ds = train_ds.map(lambda x, y: (data_augmentation(x, training=True), y))

# =========================
# Performance
# =========================
AUTOTUNE = tf.data.AUTOTUNE
train_ds = train_ds.cache().shuffle(1000).prefetch(AUTOTUNE)
val_ds   = val_ds.cache().prefetch(AUTOTUNE)
test_ds  = test_ds.cache().prefetch(AUTOTUNE)

print("""
Explain why data augmentation is important for medical images:
Data augmentation increases data diversity when medical datasets are limited.
It helps reduce overfitting and improves model generalization to images taken with different angles, positions, and devices.
""")


#CNN Model Design 

#CNN فيها ≥3 Conv + ReLU + MaxPooling + Fully Connected (Sequential API).
from tensorflow.keras import layers, models

def build_base_model():
    model = models.Sequential([
        layers.Input(shape=(224, 224, 3)),

        # Augmentation داخل المودل (يتطبق فقط أثناء التدريب)
        data_augmentation,

        # Conv Block 1
        layers.Conv2D(32, (3,3), activation="relu", padding="same"),
        layers.MaxPooling2D(),

        # Conv Block 2
        layers.Conv2D(64, (3,3), activation="relu", padding="same"),
        layers.MaxPooling2D(),

        # Conv Block 3
        layers.Conv2D(128, (3,3), activation="relu", padding="same"),
        layers.MaxPooling2D(),

        # Classifier
        layers.Flatten(),
        layers.Dense(128, activation="relu"),
        layers.Dense(1, activation="sigmoid")  # Binary classification
    ])
    return model

base_model = build_base_model()
base_model.summary()

#4. Model Training 

base_model.compile(
    optimizer=tf.keras.optimizers.Adam(learning_rate=1e-4),
    loss=tf.keras.losses.BinaryCrossentropy(),
    metrics=["accuracy"]
)

EPOCHS = 10  
history_base = base_model.fit(
    train_ds,
    validation_data=val_ds,
    epochs=EPOCHS
)